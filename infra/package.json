{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk:local": "cdk --app \"ts-node --transpile-only bin/local.ts\"",
    "cdk:dev": "cdk --app \"ts-node --transpile-only bin/dev.ts\"",
    "cdk:prod": "cdk --app \"ts-node --transpile-only bin/prod.ts\"",
    "deploy:local:cognito": "npm run cdk:local -- deploy -c deployTarget=cognito --outputs-file cdk-outputs.json",
    "deploy:local:dynamodb": "npm run cdk:local -- deploy -c deployTarget=dynamodb",
    "deploy:local:all": "npm run cdk:local -- deploy --all -c deployTarget=all --outputs-file cdk-outputs.json",
    "deploy:dev":  "npm run cdk:dev -- deploy --all",
    "deploy:prod": "npm run cdk:prod -- deploy --all",
    "sync:env:local": "ts-node scripts/sync-env-local.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1100.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.232.1",
    "constructs": "^10.0.0"
  }
}
