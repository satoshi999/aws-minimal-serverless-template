{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:local:cognito": "cdk deploy -c deployTarget=cognito --app \"ts-node --transpile-only bin/local.ts\"",
    "deploy:local:dynamodb":  "cdk deploy -c deployTarget=dynamodb --app \"ts-node --transpile-only bin/local.ts\"",
    "destroy:local:dynamodb": "cdk destroy -c deployTarget=dynamodb --app \"ts-node --transpile-only bin/local.ts\"",
    "deploy:prod:all":      "cdk deploy --all --app \"ts-node --transpile-only bin/prod.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1100.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.232.1",
    "constructs": "^10.0.0"
  }
}
